{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "uv@latest",
    "gcc@latest"
  ],
  "shell": {
    "init_hook": [
      "uv python pin 3.10",
      "uv python install",
      "uv venv --clear --python 3.10 .venv",
      "uv run jupyter kernelspec uninstall devbox-py -f || echo 'Kernel devbox-py not found, skipping uninstall.'",
      "uv run python -m ipykernel install --user --name=devbox-py --display-name \"Python (devbox)\"",
      "export PYTHONPATH=$(pwd)"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}